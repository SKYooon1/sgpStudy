<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/prevImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/sel_prev"
            android:scaleType="fitCenter"
            android:onClick="onBtnPrev"
            />

        <TextView
            android:id="@+id/pageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 / 5"
            android:textSize="25sp"
            android:layout_weight="1"
            android:gravity="center"
            />

        <ImageButton
            android:id="@+id/nextImageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/sel_next"
            android:scaleType="fitCenter"
            android:onClick="onBtnNext"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/contentImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/android_studio"
        android:gravity="center"
        android:layout_gravity="center"
        />

</LinearLayout>
